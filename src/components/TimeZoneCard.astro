---
import { formatTimeForJapan } from "../lib/helpers";
import Card from "./Card/index.astro";
---

<script>
  import { onCleanup, onMount } from "solid-js";
  import { formatTimeForJapan } from "../lib/helpers";

  let interval: ReturnType<typeof setInterval>;

  function updateClock() {
    const timeDisplay = document.getElementById("timeDisplay");
    const now = new Date();

    if (timeDisplay) {
      timeDisplay.textContent = formatTimeForJapan(now);
      timeDisplay.setAttribute("datetime", now.toISOString());
    }
  }

  onMount(() => {
    interval = setInterval(updateClock, 1000);
  });

  onCleanup(() => {
    clearInterval(interval);
  });
</script>

<Card colSpan="lg:col-span-1" rowSpan="md:row-span-2" title="Time zone">
  <time
    class="text-xl xl:text-3xl whitespace-nowrap h-[calc(100%-28px)] font-serif flex justify-center items-center"     datetime=""     id="timeDisplay"
  >
    {formatTimeForJapan(new Date())}
  </time>
</Card>
