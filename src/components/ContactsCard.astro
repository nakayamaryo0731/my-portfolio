---
import Card from "./Card/index.astro";
import { LINKS } from "../lib/constants";
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-2 lg:row-start-5">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-white text-xl font-bold">
        Let's connect!
      </h1>
    </header>
    <address class="flex flex-col mt-4">
      <h2 class="text-gray-500 text-sm">Contact Details</h2>
      <p class="text-sm">{LINKS.email}</p>
      <p class="text-sm">Japan</p>
    </address>
  </div>
</Card>
