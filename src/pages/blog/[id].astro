---
import { getCollection, render } from "astro:content";
import BasicLayout from "../../layouts/BasicLayout.astro";
import { formatDate } from "../../lib/helpers";

const { id } = Astro.params;
const posts = await getCollection("blog");
const post = posts.find((p) => p.id === id);

if (!post) {
  return Astro.redirect("/404");
}

const { Content, remarkPluginFrontmatter } = await render(post);
---

<BasicLayout
  description={post.data.description || post.data.title}
  title={`${post.data.title} - Ryo Nakayama`}
>
  <main class="mx-auto max-w-3xl w-full p-6 text-neutral-100">
    <a
      class="text-sm text-gray-400 hover:text-white mb-4 inline-block"
      href="/blog"
    >
      ‚Üê Back to Blog
    </a>

    <article class="mt-6">
      <header class="mb-8">
        <h1 class="text-3xl font-bold mb-4">{post.data.title}</h1>
        <div class="flex items-center gap-4 text-sm text-gray-500">
          <time>{formatDate(post.data.pubDate)}</time>
          {remarkPluginFrontmatter?.minutesRead && (
            <span>{remarkPluginFrontmatter.minutesRead}</span>
          )}
        </div>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="flex gap-2 mt-3">
            {post.data.tags.map((tag) => (
              <a
                href={`/blog/tags/${tag}`}
                class="text-xs px-2 py-1 rounded bg-neutral-800 text-primary-400 hover:bg-neutral-700"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}
      </header>

      <div class="prose prose-invert max-w-none">
        <Content />
      </div>
    </article>
  </main>
</BasicLayout>
